<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Congratulations\n\nYour have successfully booked your trip. "
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:fontFamily="@font/lato_light"
            android:textColor="#000"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="~Travelguide Inc. Pvt. Ltd."
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="20dp"
            android:fontFamily="@font/lato_light"
            android:textColor="#000"
            />

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Invoice: "
                    android:fontFamily="@font/athiti"
                    android:textColor="#000"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Package: "
                    android:fontFamily="@font/athiti"
                    android:textColor="#000"
                    android:textSize="30sp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Place: "
                    android:fontFamily="@font/athiti"
                    android:textColor="#000"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="From: "
                    android:fontFamily="@font/athiti"
                    android:textColor="#000"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="To: "
                    android:fontFamily="@font/athiti"
                    android:textColor="#000"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Guide : "
                    android:fontFamily="@font/athiti"
                    android:textColor="#000"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Contact No: "
                    android:fontFamily="@font/athiti"
                    android:textColor="#000"
                    android:textSize="30sp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="ABCRTG035913 "
                    android:fontFamily="@font/athiti_light"
                    android:textColor="#000"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Platinum "
                    android:fontFamily="@font/athiti_light"
                    android:textColor="#000"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Bengaluru "
                    android:fontFamily="@font/athiti_light"
                    android:textColor="#000"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="15-06-2020"
                    android:fontFamily="@font/athiti_light"
                    android:textColor="#000"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="25-06-2020 "
                    android:fontFamily="@font/athiti_light"
                    android:textColor="#000"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Raj Goswami "
                    android:fontFamily="@font/athiti_light"
                    android:textColor="#000"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="9005354345 "
                    android:fontFamily="@font/athiti_light"
                    android:textColor="#000"
                    android:textSize="30sp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>